{{ define "home" }}
{{ template "header" . }}
<div class="row">
    {{ range $.items }}
    <div class="card border-0 col-lg-4 col-md-6 col-sm-12 p-1">
        <a href="/product?id={{ .Id }}" class="btn">
            <div class="card-body row">
                <img src="{{ .Picture }}" class="col-lg-6 col-sm-12" alt="..."
                    style="max-height: 100%; min-height: 100%;">
                <div class="col-lg-6 col-sm-12 flex-column align-self-end">
                    <div class="m-2">
                        {{ .Name }}
                    </div>
                    <div class="m-1">${{ .Price }}</div>
                </div>
            </div>
        </a>
    </div>
    {{ end}}
</div>

<script type="text/javascript" src="http://8.211.150.15:3000/js/iframe.js" id="chatbot-iframe"
    data-bot-src="http://8.211.150.15:3000/chat/share?shareId=eczblnt9fqx2kz4nbnni3w6y&showHistory=0"
    data-default-open="false" data-drag="false"
    data-open-icon="data:image/svg+xml;base64,"
